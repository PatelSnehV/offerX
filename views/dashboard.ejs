      top: 15px;
      right: 15px;
      color: var(--primary-color);
      font-size: 20px;
      animation: float 3s ease-in-out infinite;
    }

    .hot-deal i {
      color: #f8f8f8;
      transition: all 0.3s ease;
    }

    .hot-deal:hover i {
      transform: translateY(-5px);
      color: rgb(98, 95, 95);

    }

    @keyframes float {
      0% {
        transform: translateY(0px);
      }

      50% {
        transform: translateY(-5px);
      }

      100% {
        transform: translateY(0px);
      }
    }

